= form_for @person, html: { class: 'form-horizontal', role: 'form' } do |f|

  %fieldset
    .form-group
      %label.control-label.col-xs-2 First name
      .col-xs-8
        = f.text_field :first_name, class: 'form-control'

    .form-group
      %label.control-label.col-xs-2 Last name
      .col-xs-8
        = f.text_field :last_name, class: 'form-control'

    .form-group
      %label.control-label.col-xs-2 Pseudonym
      .col-xs-8
        = f.text_field :pseudonym, class: 'form-control'

    .form-group
      %label.control-label.col-xs-2 Is PeopleGroup
      .col-xs-1
        = f.check_box :subtype, { class: 'form-control' }, 'PeopleGroup', 'Person'

    .form-group
      .col-xs-offset-2.col-xs-4
        = button_tag type: 'submit', class: 'btn btn-success' do
          %span.glyphicon.glyphicon-ok
          Save
        = link_to 'Go back', @person.persisted? ? person_path(@person) : people_path, class: 'btn btn-link'
