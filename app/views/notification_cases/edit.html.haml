.page-header
  %h1
    %span
      Edit Notification Case:
      %code.black= @notification_case.label

= form_tag notification_case_path(@notification_case), method: :put, class: 'form-horizontal', role: 'form' do

  %fieldset
    .panel.panel-default
      .panel-heading
        %h1.panel-title General
      .panel-body
        .form-group
          %label.control-label.col-xs-3 Description
          .col-xs-8
            = text_area_tag 'notification_case[description]', @notification_case.description, class: 'form-control'

    .form-group
      .col-xs-offset-2.col-xs-4
        = button_tag type: 'submit', class: 'btn btn-success' do
          %span.glyphicon.glyphicon-ok
          Save
        = link_to 'Go back', :back, class: 'btn btn-link'
