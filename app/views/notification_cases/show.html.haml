.page-header
  %h1= @notification_case.label
  %small
    = link_to "&larr; Go back to Notification Cases".html_safe, notification_cases_path

.panel.panel-default
  .panel-body
    .btn-group
      = link_to edit_notification_case_path(@notification_case), class: 'btn btn-info' do
        %span.glyphicon.glyphicon-edit
        Edit

%table.table.table-striped
  - @notification_case.attributes.each_pair do |key, val|
    %tr
      :ruby
        label = capitalize_all(key.humanize)
      = admin_db_column(key, label)
      %td= val
