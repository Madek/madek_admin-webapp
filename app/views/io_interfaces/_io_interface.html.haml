%tr
  %td= io_interface.id
  %td= io_interface.description
  %td.active.col-xs-3.text-center
    .btn-group.btn-group-sm
      = link_to io_interface_path(io_interface), class: 'btn btn-default' do
        %span.glyphicon.glyphicon-eye-open
      = link_to io_interface_path(io_interface), method: :delete,
          data: { confirm: 'The IO interface will be deleted. Do you want to proceed?' },
          class: 'btn btn-danger' do
        %i.glyphicon.glyphicon-trash
        Delete
      = link_to io_mappings_path(io_interface_id: io_interface.id), class: 'btn btn-default' do
        IO Mappings
