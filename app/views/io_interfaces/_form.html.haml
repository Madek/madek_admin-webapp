= form_for @io_interface, html: { class: 'form-horizontal', role: 'form' }, builder: AdminFormBuilder do |f|
  .form-group
    .col-xs-3
      = f.label :id, 'ID'
    .col-xs-8
      = f.technical_field :id, rows: 1
  .form-group
    .col-xs-3
      = f.label :description
    .col-xs-8
      = f.text_field :description, class: 'form-control'
  .form-group
    .col-xs-offset-3.col-xs-3
      = button_tag type: :submit, class: 'btn btn-success' do
        %span.glyphicon.glyphicon-ok
        Save
      = link_to 'Go back', io_interfaces_path, class: 'btn btn-link'
