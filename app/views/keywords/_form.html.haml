= form_for @keyword, html: { class: 'form-horizontal', role: 'form' } do |f|
  - if @keyword.persisted?
    .form-group
      .col-xs-1
        = f.label :id, class: 'control-label'
      .col-xs-6
        = f.text_field :id, class: 'form-control', disabled: true
  .form-group
    .col-xs-1
      = f.label :meta_key_id, class: 'control-label'
    .col-xs-6
      = f.select :meta_key_id, @vocabulary.meta_keys.where(meta_datum_object_type: 'MetaDatum::Keywords').pluck(:id), {}, class: 'form-control'
  .form-group
    .col-xs-1
      = f.label :term, class: 'control-label'
    .col-xs-6
      = f.text_field :term, class: 'form-control'
  .form-group
    .col-xs-offset-1.col-xs-3
      = button_tag type: 'submit', class: 'btn btn-success' do
        %span.glyphicon.glyphicon-ok
        Save
      = link_to 'Go back', :back, class: 'btn btn-link'
