%tr
  %td
    = render partial: 'shared/user_link_plain', locals: {user: user}
  %td #{user.email}
  %td
    = [user.first_name, user.last_name].compact.join(' ')
  %td
    - if policy(@group).remove_user_from_group?
      = link_to group_user_remove_user_from_group_path(@group, user), method: :delete,
          data: {confirm: %Q{Are you sure you want to remove "#{user.login}" from this group?}},
          class: 'btn btn-danger btn-xs' do
        %i.glyphicon.glyphicon-trash
        Remove from group
