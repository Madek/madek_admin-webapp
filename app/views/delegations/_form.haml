:ruby
  form_url =
    if @delegation.new_record?
      delegations_path
    else
      delegation_path(@delegation)
    end

= form_for @delegation, html: { class: 'form-horizontal', role: 'form' } do |f|
  .form-group
    .col-xs-2
      = f.label :name, 'Name', class: 'control-label required'
    .col-xs-9
      = f.text_field :name, class: 'form-control'
  .form-group
    .col-xs-2
      = f.label :description, 'Description', class: 'control-label'
    .col-xs-9
      = f.text_field :description, class: 'form-control'
  .form-group
    .col-xs-2
      = f.label :admin_comment, 'Admin comment', class: 'control-label'
    .col-xs-9
      = f.text_field :admin_comment, class: 'form-control'
  .form-group
    .col-xs-offset-2.col-xs-3
      = button_tag type: 'submit', class: 'btn btn-success' do
        %span.glyphicon.glyphicon-ok
        Save
      = link_to 'Go back', @delegation.persisted? ? delegation_path(@delegation) : delegations_path, class: 'btn btn-link'
