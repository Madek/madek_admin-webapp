%tr
  %td.col-xs-5{style: 'word-break: break-word'}= group.name
  %td.col-xs-6{style: 'word-break: break-word'}= group.id
  %td.col-xs-1.text-center
    .btn-group.btn-group-vertical.btn-group-xs
      = link_to group_path(group), class: 'btn btn-default btn-with-icon-only',
          title: 'Show the group' do
        %i.glyphicon.glyphicon-eye-open
      = link_to delegation_group_remove_from_delegation_path(@delegation, group), method: :delete,
          data: {confirm: %Q{Are you sure you want to remove "#{group.name}" from this delegation?}},
          title: 'Remove from this delegation',
          class: 'btn btn-danger btn-xs btn-with-icon-only' do
        %i.glyphicon.glyphicon-trash
