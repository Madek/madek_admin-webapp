.page-header
  %h1
    Edit Group Permission
    %small Vocabulary: #{@vocabulary}

.row
  .col-xs-12
    = form_for [@vocabulary, @permission],
        method: :patch,
        as: :vocabulary_group_permission,
        url: vocabulary_vocabulary_group_permission_path(@vocabulary, @permission),
        html: { class: 'form-horizontal', role: 'form' } do |f|
      = render partial: 'form_fields', locals: { f: f }
