%tr
  %td.state
    - state_colors = { 'finished' => :success, 'failed' => :danger, 'submitted' => :info, 'initialized' => :default }
    %span{class: "label label-#{state_colors[zencoder_job.state]}"}= zencoder_job.state
  %td
    = link_to media_file_path(zencoder_job.media_file) do
      Media File #{zencoder_job.media_file.id}
  %td= zencoder_job.created_at
  %td
    .btn-group
      = link_to zencoder_job_path(zencoder_job), class: 'btn btn-default btn-sm' do
        %span.glyphicon.glyphicon-eye-open
