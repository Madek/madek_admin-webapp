.page-header
  %h1
    ZencoderJob: #{@zencoder_job.id}
  %small
    = link_to "&larr; Go back to Media File".html_safe, media_file_path(@zencoder_job.media_file)

.row
  .col-xs-12
    %table.table.table-striped
      %thead
      %tbody
        - @zencoder_job.attributes.each do |attr|
          %tr
            %td.col-xs-4
              %strong= attr.first.humanize
            - case attr.first
            - when 'zencoder_id'
              %td
                - link = "https://app.zencoder.com/jobs/#{attr.last}"
                = link_to link, link
            - else
              %td= attr.last
