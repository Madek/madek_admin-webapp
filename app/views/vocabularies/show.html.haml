.page-header
  %h1 Vocabulary: #{@vocabulary}

.row
  .col-xs-12
    .panel.panel-default
      .panel-body
        .btn-group
          = render partial: 'action_buttons', locals: { vocabulary: @vocabulary, size: nil }
          = link_to "Keyword: #{@vocabulary.keywords.count}",
              vocabulary_keywords_path(@vocabulary),
              class: 'btn btn-default'

.row
  .col-xs-12
    %table.table.table-striped
      %thead
      %tbody
        - @vocabulary.attributes.each do |attr|
          %tr
            %td
              %strong= attr.first.humanize
            %td= attr.last

= render 'meta_keys_list'
