= form_for @vocabulary, html: { class: 'form-horizontal', role: 'form' } do |f| 
  .form-group
    .col-xs-2
      = f.label :id, 'ID', class: 'control-label'
    .col-xs-6
      = f.text_field :id, class: 'form-control', disabled: @vocabulary.persisted?
  .form-group
    .col-xs-2
      = f.label :label, class: 'control-label'
    .col-xs-6
      = f.text_field :label, class: 'form-control'
  .form-group
    .col-xs-2
      = f.label :description, class: 'control-label'
    .col-xs-6
      = f.text_area :description, class: 'form-control', rows: 4
  .form-group
    .col-xs-2
      = f.label :admin_comment, class: 'control-label'
    .col-xs-6
      = f.text_area :admin_comment, class: 'form-control', rows: 4
  .form-group
    .col-xs-offset-2.col-xs-3
      .checkbox
        %label
          = f.check_box :enabled_for_public_view
          Enabled for public view?
  .form-group
    .col-xs-offset-2.col-xs-3
      .checkbox
        %label
          = f.check_box :enabled_for_public_use
          Enabled for public use?
  .form-group
    .col-xs-offset-2.col-xs-3
      = button_tag type: 'submit', class: 'btn btn-success' do
        %span.glyphicon.glyphicon-ok
        Save
      = link_to 'Go back', vocabularies_path, class: 'btn btn-link'
