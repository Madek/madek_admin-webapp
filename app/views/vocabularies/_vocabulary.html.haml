%tr{'data-id' => vocabulary.id}
  %td= vocabulary
  %td= vocabulary.label
  %td= vocabulary.description
  %td.active
    .btn-group.btn-group-vertical
      = link_to vocabulary_path(vocabulary), class: 'btn btn-default btn-sm' do
        %i.glyphicon.glyphicon-eye-open
        Details
      = render partial: 'action_buttons', locals: { vocabulary: vocabulary, size: 'btn-sm' }
      = link_to "MetaKeys: #{vocabulary.meta_keys_count}",
          meta_keys_path(vocabulary_id: vocabulary.id),
          class: 'btn btn-default btn-sm'
      = link_to "Keyword: #{vocabulary.keywords.count}", vocabulary_keywords_path(vocabulary),
          class: 'btn btn-default btn-sm'
