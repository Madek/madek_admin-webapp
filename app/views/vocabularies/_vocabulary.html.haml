:ruby
  striped = (vocabulary_counter % 2 > 0) ? nil : :striped

%tr{'data-id' => vocabulary.id, class: striped}
  %td= vocabulary
  %td= vocabulary.label
  %td= vocabulary.description
  %td.active
    .btn-group.btn-group-sm.btn-group-vertical
      = link_to vocabulary_path(vocabulary), class: 'btn btn-default' do
        %i.glyphicon.glyphicon-eye-open
        Details
      = render partial: 'action_buttons', locals: { vocabulary: vocabulary }
      = link_to "MetaKeys: #{vocabulary.meta_keys_count}",
          meta_keys_path(vocabulary_id: vocabulary.id),
          class: 'btn btn-default'
      = link_to "Keywords: #{vocabulary.keywords.count}", keywords_path(filter: { vocabulary_id: vocabulary.id }),
          class: 'btn btn-default'
      = move_buttons(vocabulary)
= admin_comment_row(vocabulary, colspan: 4, striped: striped)
