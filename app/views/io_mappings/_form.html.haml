= form_for @io_mapping, html: { class: 'form-horizontal', role: 'form' }, builder: AdminFormBuilder do |f|
  .form-group
    .col-xs-3
      = f.label :io_interface_id, 'IO interface'
    .col-xs-8
      = f.technical_field :io_interface_id, rows: 1
  .form-group
    .col-xs-3
      = f.label :meta_key_id
    .col-xs-8
      = f.technical_field :meta_key_id, rows: 1
  .form-group
    .col-xs-3
      = f.label :key_map
    .col-xs-8
      = f.technical_field :key_map, rows: 1
  .form-group
    .col-xs-3
      = f.label :key_map_type
    .col-xs-8
      = f.technical_field :key_map_type, rows: 1
  .form-group
    .col-xs-offset-3.col-xs-3
      = button_tag type: :submit, class: 'btn btn-success' do
        %span.glyphicon.glyphicon-ok
        Save
      = link_to 'Go back', io_mappings_path, class: 'btn btn-link'
