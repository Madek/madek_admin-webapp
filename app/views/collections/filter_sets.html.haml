.page-header
  %h1
    %i.glyphicon.glyphicon-folder-open
    #{@collection.title} - Filter Sets(#{@filter_sets.total_count})

= render partial: 'action_panel', locals: { collection: @collection, user: @user }

.row
  .col-xs-12
    %table.table.table-striped
      %thead
        %tr
          %th Id
          %th User
          %th
      %tbody
        = render partial: 'filter_set', collection: @filter_sets

= paginate @filter_sets
