.page-header
  %h1
    %i.glyphicon.glyphicon-folder-open
    #{@collection.title} - Sets(#{@collections.total_count})

= render partial: 'action_panel', locals: { collection: @collection, user: @user }

.row
  .col-xs-12
    %table.table.table-striped
      %thead
        %tr
          %th Title
          %th User
          %th
      %tbody
        = render partial: 'collection', collection: @collections

= paginate @collections
