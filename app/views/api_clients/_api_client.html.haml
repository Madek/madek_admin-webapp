%tr.active
  %td.col-xs-3= api_client.id
  %td.col-xs-2= api_client.login
  %td
    - if api_client.user
      = render partial: 'shared/user_link_plain', locals: {user: api_client.user}
  %td= api_client.description

  %td.active.col-xs-3.text-center
    .btn-group.btn-group-sm
      = link_to api_client_path(api_client), class: 'btn btn-default btn-with-icon-only' do
        %i.glyphicon.glyphicon-eye-open
      = render partial: 'action_buttons', locals: {api_client: api_client }
      - if session[:vocabulary_id].present?
        = link_to path_to_vocabulary_permission_form(api_client), class: 'btn btn-success' do
          Grant Vocabulary Permission
        = link_to api_clients_path(reset_vocabulary_params: true),
                  class: 'btn btn-default' do
          Cancel
