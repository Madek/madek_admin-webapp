%tr
  %td= meta_key.id
  %td= meta_key.label
  %td
    - if meta_key.vocabulary
      = link_to meta_key.vocabulary.id, vocabulary_path(meta_key.vocabulary)
  %td= meta_key.meta_datum_object_type
  %td.active.col-xs-4
    .btn-group
      - if session[:context_id].present?
        = link_to add_meta_key_context_path(session[:context_id], meta_key_id: meta_key.id), method: :patch, class: 'btn btn-success btn-sm' do
          %span.glyphicon.glyphicon-plus
          Add to the Context
      - else
        = link_to meta_key_path(meta_key), class: 'btn btn-default btn-sm' do
          %span.glyphicon.glyphicon-eye-open
        = render partial: 'action_buttons', locals: { meta_key: meta_key, size: 'btn-sm' }
